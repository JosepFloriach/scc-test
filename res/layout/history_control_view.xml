<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:padding="5sp" >

    <TextView android:id="@+id/history_control_headline_textview"
        	  android:layout_width="wrap_content"
        	  android:layout_height="wrap_content"
        	  android:layout_alignParentLeft="true"
        	  android:text="history control view"
        	  android:textSize="16sp"
        	  />
    <Button 
        android:id="@+id/history_control_show_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_control_show_details_button_text"
        android:onClick="showHistoryDetailsFromHistoryControl"
        />

</LinearLayout>
