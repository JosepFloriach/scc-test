<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5sp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2sp"
        android:text="@string/add_alter_contact_event_headline"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_alter_contact_event_dialog_date_view"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2sp"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/add_alter_contact_event_dialog_time_view"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2sp"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/modify_alter_contact_event_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2sp"
        android:text="@string/modify_time_button_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#555555"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="5sp"
                android:text="@string/alter_contact_event_form" />
            
            <Spinner 
                android:id="@+id/add_alter_contact_event_form_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/secondary_attribute_contact_form_choices"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#555555"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="5sp"
                android:text="@string/alter_contact_event_content" />
            
            <Spinner 
                android:id="@+id/add_alter_contact_event_content_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/secondary_attribute_contact_content_choices"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#555555"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="5sp"
                android:text="@string/alter_contact_event_atmosphere" />
            
            <Spinner 
                android:id="@+id/add_alter_contact_event_atmosphere_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/secondary_attribute_contact_atmosphere_choices"/>

            <EditText
                android:id="@+id/add_alter_contact_event_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_contact_event_text_hint"
                android:minHeight="80sp"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>